{
  "license": "MIT",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "test": "jest --coverage --verbose"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "17.0.5",
    "jest": "27.4.5",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "packageManager": "yarn@3.1.1"
}
